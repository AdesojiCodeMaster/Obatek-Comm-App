<div class='signup'>
<h1>Obatek Telecom New Customer Registration Center</h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
 
  <div class="field">
    <%= f.label :customer_name %><br />
    <%= f.text_field :customer_name, class:'signup-input', placeholder: 'Please, enter your name' %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'signup-input', placeholder: 'Please, enter your email:example@example.com' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:'signup-input', placeholder: 'Please, enter your password'%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'signup-input', placeholder: 'Please, confirm your password' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" , class:'reg-signup'%>
  </div>
<% end %>
</div>


