




<p id="notice"><%= notice %></p>
<div class='table-cont'>
<h1>Requests Summary</h1>

<table>
  <thead>
    <tr>
      <th>Request Title</th>
      <th>Customer_id</th>
      <th>Customer_Pix</th>
      <th>Request_id</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.title %></td>
        <td><button class='id-btn'><%= request.customer_id %></button></td>
        <td>
      
        <% if request.avatar.attached? %>
        <div class= 'index-img'>
       <%= image_tag request.avatar, style: 'width: 100px; height: 60px; display: block'%>
       </div>
      <% end %>
      </td>
      <td><button class='sho-btn'><%= request.id %></button> </td>
        <td><button class='sho-btn'><%= link_to 'Show', request %></button></td>
        <td><button class='dest-btn'><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p class='comm-not'> Please, use both <strong>Customer_id</strong> and <strong>Request_id</strong> to send your comments/complains to us!</p> 
